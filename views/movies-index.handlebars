<h1>Now Playing</h1>

<div class="row">
    {{#each movies}}
        <div class="col-md-3 card">
            <div class="card-body">
                <h4 class="card-title">{{this.title}}</h4>
                <p>{{this.genres_str}}</p>
                {{!-- {{#each this.genres_str}}
                    <p>{{this}}</p>
                {{/each}} --}}
                <a href="/movies/{{this.id}}"><img alt="{{this.title}}" src="https://image.tmdb.org/t/p/w154{{this.poster_path}}"></a>
            </div>
        </div>
    {{/each}}
</div>